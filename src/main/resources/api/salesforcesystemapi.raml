#%RAML 1.0
title: SalesforceSystemAPI

/ESR:
  patch:
    description: Update ESR resource fields.
    body:
      application/json:
        type: object
        properties:
          name:
            type: string | nil
            required: true
            description: The name of the ESR.
          projectTitle:
            type: string | nil
            required: true
            description: The title of the project.
          projectStatus:
            type: string | nil
            required: true
            description: The status of the project.
          progress:
            type: string | nil
            required: true
            description: The progress of the project.
          projectEngineer:
            type: string | nil
            required: true
            description: The engineer responsible for the project.
          designLead:
            type: string | nil
            required: true
            description: The lead designer for the project.
          swProjectID:
            type: string | nil
            required: true
            description: SolidWorks Project ID.

    responses:
      200:
        description: Successfully updated the ESR fields.
      400:
        description: Bad request, validation error, or missing required fields.
      404:
        description: ESR resource not found.
      500:
        description: Internal server error.